package Lintian::coll::unpacked;

no lib '.';

use strict;
use warnings;
use autodie;

use lib "$ENV{'LINTIAN_ROOT'}/lib";

use Lintian::Index::Installed;
use Lintian::Index::Patched;

use Lintian::Collect::Changelog;
use Lintian::Collect::Copyright;
use Lintian::Collect::Diffstat;
use Lintian::Collect::Overrides;

sub collect {
    my ($pkg, $type, $dir) = @_;

    if ($type eq 'source') {
        my $patched = Lintian::Index::Patched->new;
        $patched->collect($pkg, $type, $dir);

        Lintian::Collect::Diffstat::collect($pkg, $type, $dir);

    } else {
        # binary package
        my $installed = Lintian::Index::Installed->new;
        $installed->collect($pkg, $type, $dir);

        Lintian::Collect::Changelog::collect($pkg, $type, $dir);
        Lintian::Collect::Copyright::collect($pkg, $type, $dir);
    }

    Lintian::Collect::Overrides::collect($pkg, $type, $dir);

    return;
}

collect(@ARGV) unless caller;

1;

